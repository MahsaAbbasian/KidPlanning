<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dashboard_fragment_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboard_fragment_kid_chores_pv_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/task_generic"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintTop_toTopOf="@+id/dashboard_fragment_background_view" />

    <TextView
        android:id="@+id/dashboard_fragment_kid_chores_pv_kid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/kid_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_fragment_kid_chores_pv_picture" />

    <TextView
        android:id="@+id/dashboard_fragment_kid_chores_pv_chores_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/chores"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_fragment_kid_chores_pv_kid_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_fragment_kid_chores_pv_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintEnd_toEndOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintStart_toStartOf="@+id/dashboard_fragment_background_view"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_fragment_kid_chores_pv_chores_text" />
</androidx.constraintlayout.widget.ConstraintLayout>